<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/cart_toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </include>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_page_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/have_cart_layout"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_cart"
                    android:layout_gravity="center"
                    android:textSize="14pt"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:textColor="#546E7A"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_address"
                    android:textSize="10pt"
                    android:fontFamily="@font/alata"
                    android:textStyle="bold"
                    android:textColor="#546E7A"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_address"
                    android:textSize="8pt"
                    android:fontFamily="@font/alata"
                    android:textColor="#546E7A"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cart_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/alata"
                        android:text="@string/items_total"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/alata"
                        android:text="@string/peso_sign"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/alata"
                        android:text="@string/delivery_services"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/delivery_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/alata"
                        android:text="@string/peso_sign"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/alata"
                        android:text="@string/payment_option"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/alata"
                        android:text="@string/cash_on_delivery"
                        android:textColor="#546E7A"
                        android:textSize="8pt" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/alata"
                        android:text="@string/total"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/alata"
                        android:text="@string/peso_sign"
                        android:textAlignment="center"
                        android:textColor="#546E7A"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/btCheckOut"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    app:strokeColor="#87CEFA"
                    android:fontFamily="@font/alata"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:text="@string/checkout"
                    android:textColor="#87CEFA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="5dp"
                    app:iconSize="25dp"
                    app:iconTint="#87CEFA"
                    app:icon="@drawable/ic_baseline_check_circle_outline_24" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/no_data_layout"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/outline_shopping_cart_24"
                    android:contentDescription="@string/app_name"
                    app:tint="#C5C5C5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No orders yet"
                    android:textSize="30sp"
                    android:fontFamily="@font/alata"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>